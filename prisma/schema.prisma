generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
  // directUrl = env("DIRECT_URL")
}

model Driver {
  id            String   @id @default(uuid())
  name          String
  lastName      String
  driverLicense String
  document      String   @unique
  phone         String
  isActive      Boolean
  email         String   @unique
  password      String
  createdAt     DateTime @default(now())

  @@map("driver")
}
